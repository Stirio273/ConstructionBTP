@{
    List<TypeMaison> typeMaisons = ViewBag.typeMaisons;
    List<TypeFinition> typeFinitions = ViewBag.typeFinitions;
}

<head>
    <style>
        .col-xl-3 .card {
            border: 1px solid rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<div class="col-xl-12 col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Creation de devis</h4>
        </div>
        <div class="card-body">
            <div class="basic-form">
                <form asp-action="Create" asp-controller="DevisUser">
                    <input type="hidden" name="idClient" value="">
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label">Type de maison :</label>
                        <div class="row">
                            @foreach (var item in typeMaisons)
                            {
                                <div class="col-xl-3">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5 class="card-title"><strong>@item.Nom</strong></h5>
                                        </div>
                                        <div class="card-body">
                                            <p class="card-text">@Html.Raw(item.Description.Replace("\n", "<br>"))</p>
                                            <input type="radio" id="@item.Id" name="idTypeMaison" value="@item.Id"
                                                style="display:none;">
                                        </div>
                                        <div class="card-footer d-sm-flex justify-content-between align-items-center">
                                            <a href="javascript:void(0);" class="btn btn-primary"
                                                onclick="document.getElementById('@item.Id').checked = true;">Choisir</a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label">Type de finition :</label>
                        <div class="col-sm-6">
                            <select class="default-select form-control" name="idTypeFinition">
                                @foreach (var item in typeFinitions)
                                {
                                    <option value="@item.Id">@item.Nom</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label">Date de debut des travaux :</label>
                        <div class="col-sm-6">
                            <input type="datetime-local" class="form-control" name="dateDebut">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-4 col-form-label">Lieu :</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="lieu">
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Valider</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
