@model TypeFinition
<div class="col-xl-10 col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Modification de type de finition</h4>
        </div>
        <div class="card-body">
            <div class="basic-form">
                <form asp-action="Update" asp-controller="Finition" method="post">
                    @Html.ValidationSummary(true)
                    <input type="hidden" name="id" value="@Model.Id">
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Nom:</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="nom" value="@Model.Nom">
                        </div>
                        <div class="col-sm-2">
                            @Html.ValidationMessageFor(model => model.Nom, "", new{@style = "color:red;"})
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <label class="col-sm-2 col-form-label">Pourcentage:</label>
                        <div class="col-sm-6">
                            <input type="text" class="form-control" name="pourcentage"
                                value="@Model.Pourcentage.ToString()" step="0.001">
                        </div>
                        <div class="col-sm-2">
                            @Html.ValidationMessageFor(model => model.Pourcentage, "", new{@style = "color:red;"})
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Valider</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>